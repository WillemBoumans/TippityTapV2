<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tippitytap.app.Game"
    android:background="@drawable/back">
    <com.tippitytapv2.app.Indicator
        android:id="@+id/Indicator"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_centerInParent="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Now playing: "
        android:id="@+id/now_playing"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:singleLine="true"
        android:longClickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:id="@+id/song_playing"
        android:layout_below="@+id/now_playing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap!"
        android:textSize="100dp"
        android:id="@+id/Tap"

        android:enabled="false"
        android:height="256dp"
        android:width="256dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="114dp"
        android:background="@android:color/transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sample text"
        android:textSize="25sp"
        android:id="@+id/result_text"
        android:visibility="invisible"
        android:layout_alignBaseline="@+id/Tap"
        android:layout_alignBottom="@+id/Tap"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sample text"
        android:textSize="50sp"
        android:id="@+id/GameScoreTextView"
        android:visibility="invisible"
        android:layout_alignBaseline="@+id/Tap"
        android:layout_alignBottom="@+id/Tap"
        android:layout_centerHorizontal="true" />
</RelativeLayout>